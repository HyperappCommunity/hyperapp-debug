{
  "name": "hyperapp-debug",
  "version": "1.0.0-beta.0",
  "main": "withDebug.js",
  "module": "src/hoa/index.js",
  "license": "MIT",
  "repository": "github:HyperappCommunity/hyperapp-debug",
  "scripts": {
    "start:testbed": "parcel ./src/test-bed/index.html",
    "start:extension": "web-ext run -s ./src/browser-extension -u http://localhost:1234",
    "build:extension": "web-ext build -s ./src/browser-extension",
    "build:hoa": "NODE_ENV=production parcel build ./src/hoa/index.js --out-dir ./ --out-file withDebug.js --global withDebug --target browser",
    "start": "concurrently \"yarn start:testbed\" \"sleep 5 && yarn start:extension\"",
    "prepublishOnly": "yarn build:hoa",
    "test": "ava"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "ava": "^2.3.0",
    "babel-eslint": "^10.0.3",
    "concurrently": "^4.1.2",
    "eslint": "^6.4.0",
    "hyperapp": "^2.0.1",
    "hyperapp-fx": "^2.0.0-beta.1",
    "npm-run-all": "^4.1.5",
    "parcel": "^1.12.3",
    "web-ext": "^3.1.1"
  },
  "peerDependencies": {
    "hyperapp": "^2"
  },
  "ava": {
    "files": [
      "src/**/*.test.js"
    ],
    "source": [
      "src/**/*.test.js"
    ],
    "failFast": true,
    "failWithoutassertions": false,
    "require": [
      "@babel/register"
    ]
  }
}
